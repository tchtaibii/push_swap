#include "push_swap.h"
int *ft_pb(int *stack.a, int *stack.b)
{
	int	*stack_temp;
	int i;

	if(stack.a)
	{
		if (stack.b[0])
		{
			stack.b = malloc(sizeof(int));
			stack.b[0] = '\0';
		}
		i = table_counter(stack.b);
		//stack_temp = malloc(sizeof(int) * i);
		stack_temp = stack.b;
		free(stack.b);
		stack.b = malloc(sizeof(int) * (i + 1));
		stack.b[i] = '\0';
		stack.b[0] = stack.a[0];
		i = 1;
		while(stack.b[i])
		{
			stack.b[i] = stack_temp[i - 1];
			i++;
		}
		//free(stack_temp);
		stack.a = ft_increase_a(stack.a);
	}
	return (stack.b);
}

int *ft_pa(int *stack.a, int *stack.b)
{
	int	*stack_temp;
	int i;

	if(stack.b[0])
	{
		i = table_counter(stack.a) + 1;
		stack_temp = malloc(sizeof(int) * (i + 1));
		stack_temp[0] = stack.b[0];
		i = 0;
		while(stack.a[i])
		{
			stack_temp[i + 1] = stack.a[i];
			i++;
		}
		//free(stack.b[0]);
		free(stack.a);
		stack_temp[i + 1] = '\0';
		i = table_counter(stack_temp);
		stack.a = malloc(sizeof(int) * (i + 1));
		stack.a = stack_temp;
		ft_increase_b(stack.b);
	}
		//free(stack_temp);
	return (stack.a);
}

